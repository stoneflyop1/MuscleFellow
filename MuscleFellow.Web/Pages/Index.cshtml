@page
@model IndexModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "首页";
}
<div class="container">
    <div class="row">
        <img src="~/Assets/theme2.png" class="img-thumbnail" style="padding:0px;margin:0px;border:none;" alt=""/>
    </div>
    <div class="row">
        <div class="bg-warning row">
            <h4>品牌分类</h4>
        </div>
        @if (Model.Brands != null)
        {
            foreach (var b in Model.Brands)
            {
                <div class="col-md-2 product-thumbnial">
                    <a href="/Brands/@b.BrandID">
                        <img src="@b.Logo" alt="@b.Description" style="width:100%;height:60px" />
                        <p style="text-align:center">@b.BrandName</p>
                    </a>
                </div>
            }
        }

    </div>
    <div class="row">
        <div class="bg-info row">
            <h4>热卖商品</h4>
        </div>
        @if (Model.Products != null)
        {
            foreach (var p in Model.Products)
            {
                <div class="col-lg-2 product-thumbnial">
                    <a href="/Product/@p.ProductID">
                        <img src="@p.ThumbnailImage" alt="@p.Description" style="width:100%;height:100%" />
                        <p class="text_overflow">@p.ProductName</p>
                    </a>
                </div>
            }
        }

    </div>
</div>