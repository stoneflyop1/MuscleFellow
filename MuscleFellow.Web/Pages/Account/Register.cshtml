@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"].</h2>

<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="RegisterUser.Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RegisterUser.Email" class="form-control" />
            <span asp-validation-for="RegisterUser.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="RegisterUser.Password" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RegisterUser.Password" class="form-control" />
            <span asp-validation-for="RegisterUser.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="RegisterUser.ConfirmPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RegisterUser.ConfirmPassword" class="form-control" />
            <span asp-validation-for="RegisterUser.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
